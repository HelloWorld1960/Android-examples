<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Apariencia del boton -->

    <!--Precionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#de5bd2"/>
            <corners android:radius="@dimen/radio_botn"/>
        </shape>
    </item>

    <!--Desactivado -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#303f8f"></solid>
            <corners android:radius="@dimen/radio_botn"></corners>
        </shape>
    </item>

    <!--Reposo:Siempre debe de estar al ultimo -->
    <item>
        <shape>
            <gradient android:startColor="#ddbfdf"
                android:endColor="#2c26da"
                android:angle="270"></gradient>
            <corners android:radius="@dimen/radio_botn"/>
        </shape>
    </item>
</selector>